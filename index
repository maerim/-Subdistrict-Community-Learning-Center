        function init() {
            renderMenu();
            view(0);
        }

        function renderMenu() {
            const menu = document.getElementById('villageMenu');
            menu.innerHTML = data.map(v => `
                <button onclick="view(${v.id})" id="btn-${v.id}" class="village-btn w-full px-6 py-4 flex justify-between items-center hover:bg-blue-50/50 transition-all text-left">
                    <div>
                        <p class="font-bold ${v.id === 0 ? 'text-blue-800' : 'text-slate-700'}">${v.name}</p>
                        <p class="text-[10px] text-slate-400 font-semibold uppercase tracking-wider">${v.pct}% ของประชากรตำบล</p>
                    </div>
                    <span class="bg-slate-100 text-slate-600 px-3 py-1 rounded-lg text-sm font-bold shadow-sm">${v.total.toLocaleString()}</span>
                </button>
            `).join('');
        }

        function view(id) {
            const item = data.find(v => v.id === id);
            const viewDiv = document.getElementById('detailView');
            
            document.querySelectorAll('.village-btn').forEach(b => b.classList.remove('active-village'));
            const activeBtn = document.getElementById(`btn-${id}`);
            if (activeBtn) activeBtn.classList.add('active-village');

            const mPct = ((item.male / item.total) * 100).toFixed(1);
            const fPct = ((item.female / item.total) * 100).toFixed(1);
            const thaiPct = ((item.thai / item.total) * 100).toFixed(1);
            const nonThaiPct = ((item.nonThai / item.total) * 100).toFixed(1);

            viewDiv.innerHTML = `
                <div class="space-y-8 animate-[fadeIn_0.5s_ease-out]">
                    <!-- Title & Header -->
                    <div class="flex flex-col md:flex-row justify-between items-start md:items-center border-b border-slate-100 pb-6">
                        <div>
                            <span class="text-blue-600 font-black uppercase text-[10px] tracking-[0.2em]">STATISTICS OVERVIEW</span>
                            <h2 class="text-3xl font-bold text-slate-900">${item.name}</h2>
                        </div>
                        <div class="mt-4 md:mt-0 flex items-center space-x-3">
                            <div class="text-right">
                                <p class="text-slate-400 text-[10px] font-bold uppercase">สัดส่วนพื้นที่</p>
                                <p class="text-2xl font-black text-blue-600">${item.pct}%</p>
                            </div>
                        </div>
                    </div>

                    <!-- Main Stats Grid -->
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div class="stat-card bg-blue-50/70 p-6 rounded-3xl border border-blue-100 shadow-sm">
                            <div class="flex items-center">
                                <div class="bg-blue-600 text-white p-3 rounded-2xl mr-4 shadow-lg shadow-blue-200">
                                    <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20"><path d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z"></path></svg>
                                </div>
                                <div>
                                    <p class="text-blue-700 text-xs font-bold uppercase">เพศชาย</p>
                                    <p class="text-3xl font-black text-blue-900">${item.male.toLocaleString()}</p>
                                    <div class="flex items-center text-blue-500 text-xs font-bold">
                                        <div class="w-16 h-1.5 bg-blue-200 rounded-full mr-2 overflow-hidden">
                                            <div style="width: ${mPct}%" class="bg-blue-600 h-full"></div>
                                        </div>
                                        ${mPct}%
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="stat-card bg-pink-50/70 p-6 rounded-3xl border border-pink-100 shadow-sm">
                            <div class="flex items-center">
                                <div class="bg-pink-500 text-white p-3 rounded-2xl mr-4 shadow-lg shadow-pink-200">
                                    <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20"><path d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z"></path></svg>
                                </div>
                                <div>
                                    <p class="text-pink-700 text-xs font-bold uppercase">เพศหญิง</p>
                                    <p class="text-3xl font-black text-pink-900">${item.female.toLocaleString()}</p>
                                    <div class="flex items-center text-pink-500 text-xs font-bold">
                                        <div class="w-16 h-1.5 bg-pink-200 rounded-full mr-2 overflow-hidden">
                                            <div style="width: ${fPct}%" class="bg-pink-500 h-full"></div>
                                        </div>
                                        ${fPct}%
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

